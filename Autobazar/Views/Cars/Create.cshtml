@model Autobazar.Models.Car

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturingDate" class="control-label"></label>
                <input asp-for="ManufacturingDate" class="form-control" />
                <span asp-validation-for="ManufacturingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tachometer" class="control-label"></label>
                <input asp-for="Tachometer" class="form-control" />
                <span asp-validation-for="Tachometer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fuels" class="control-label"></label>
                <select asp-for="Fuels" asp-items="Html.GetEnumSelectList<Fuel>()" class="form-control"></select>
                <span asp-validation-for="Fuels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bodies" class="control-label"></label>
                <select asp-for="Bodies" asp-items="Html.GetEnumSelectList<Body>()" class="form-control"></select>
                <span asp-validation-for="Bodies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spz" class="control-label"></label>
                <input asp-for="Spz" class="form-control" />
                <span asp-validation-for="Spz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InBazarFrom" class="control-label"></label>
                <input asp-for="InBazarFrom" class="form-control" />
                <span asp-validation-for="InBazarFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
