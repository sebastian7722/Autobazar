@model Autobazar.Models.Car

@section Styles {
<link rel="stylesheet" href="~/css/views/createEdit.css" />
}

@{
    ViewData["Title"] = "Přidat auto";
}

<section class="row justify-content-center align-items-center py-4">
    <div class="col-sm-10 col-md-10 col-lg-10 col-xl-8 col-xxl-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="Manufacturer" class="form-label"></label>
                    <input asp-for="Manufacturer" class="form-control" />
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Model" class="form-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="ManufacturingDate" class="form-label"></label>
                    <input asp-for="ManufacturingDate" class="form-control" />
                    <span asp-validation-for="ManufacturingDate" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Tachometer" class="form-label"></label>
                    <input asp-for="Tachometer" class="form-control" />
                    <span asp-validation-for="Tachometer" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="Fuels" class="form-label"></label>
                    <select asp-for="Fuels" asp-items="Html.GetEnumSelectList<Fuel>()" class="form-control"></select>
                    <span asp-validation-for="Fuels" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Bodies" class="form-label"></label>
                    <select asp-for="Bodies" asp-items="Html.GetEnumSelectList<Body>()" class="form-control"></select>
                    <span asp-validation-for="Bodies" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="Spz" class="form-label"></label>
                    <input asp-for="Spz" class="form-control" />
                    <span asp-validation-for="Spz" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Conditions" class="form-label"></label>
                    <select asp-for="Conditions" asp-items="Html.GetEnumSelectList<Condition>()" class="form-control"></select>
                    <span asp-validation-for="Conditions" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="InBazarFrom" class="form-label"></label>
                    <input asp-for="InBazarFrom" class="form-control" />
                    <span asp-validation-for="InBazarFrom" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Note" class="form-label"></label>
                <textarea asp-for="Note" rows="3" class="form-control"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Přidat" class="btn btn-primary btn-submit" />
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
